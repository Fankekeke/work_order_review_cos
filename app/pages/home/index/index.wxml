<!--热销推荐-->
<view class="cu-bar bg-white solid-bottom">
    <view class='action'>
        <text class='icon-title text-orange'></text> 预约下单
    </view>
</view>
<view class="bg-white solid-bottom">
    <view style="padding: 15px 10px 20px 10px">
        <van-cell-group inset border="{{false}}">
            <!-- 作业类型 -->
            <van-cell
                    clickable
                    arrow-direction="right"
                    border="{{false}}"
                    center
                    title="作业类型"
                    label="{{ workType }}"
                    is-link
                    bindtap="selectWorkType"
            />

            <!-- 作业内容描述 -->
            <van-field
                    value="{{ workContent }}"
                    placeholder="请输入作业内容描述"
                    border="{{false}}"
                    bind:change="onWorkContentChange"
            />

            <!-- 作业地点 -->
            <van-field
                    value="{{ location }}"
                    placeholder="请输入作业地点"
                    border="{{false}}"
                    bind:change="onLocationChange"
            />

            <!-- 计划开始时间 -->
            <van-cell
                    clickable
                    arrow-direction="right"
                    border="{{false}}"
                    center
                    title="计划开始时间"
                    label="{{ startTime }}"
                    is-link
                    bindtap="selectStartTime"
            />

            <!-- 计划结束时间 -->
            <van-cell
                    clickable
                    arrow-direction="right"
                    border="{{false}}"
                    center
                    title="计划结束时间"
                    label="{{ endTime }}"
                    is-link
                    bindtap="selectEndTime"
            />
        </van-cell-group>
        <view style="padding: 10px 12px 0 12px">
            <van-button type="info" size="normal" style="width: 100%" block bind:click="submit" color="#6d07a8">提交预约
            </van-button>
        </view>
    </view>
</view>

        <!-- 作业类型弹窗 -->
<van-popup
        close-on-click-overlay
        round
        show="{{ showWorkTypePicker }}"
        bind:close="onCloseWorkTypePicker"
        position="bottom"
>
    <van-picker
            columns="{{ workTypeList }}"
            bind:cancel="onCloseWorkTypePicker"
            bind:confirm="onConfirmWorkType"
            show-toolbar
    />
</van-popup>

        <!-- 开始时间弹窗 -->
<van-popup
        close-on-click-overlay
        round
        show="{{ showStartTimePicker }}"
        bind:close="onCloseStartTimePicker"
        position="bottom"
>
    <van-datetime-picker
            type="datetime"
            bind:cancel="onCloseStartTimePicker"
            bind:confirm="onConfirmStartTime"
            show-toolbar
    />
</van-popup>

        <!-- 结束时间弹窗 -->
<van-popup
        close-on-click-overlay
        round
        show="{{ showEndTimePicker }}"
        bind:close="onCloseEndTimePicker"
        position="bottom"
>
    <van-datetime-picker
            type="datetime"
            bind:cancel="onCloseEndTimePicker"
            bind:confirm="onConfirmEndTime"
            show-toolbar
    />
</van-popup>

<van-popup close-on-click-overlay round show="{{ startPoint.show }}" data-type="1" bind:close="onClose" position="bottom">
    <van-picker columns="{{ addressList }}" data-type="1" bind:cancel="onClose" bind:confirm="onChange"
        show-toolbar />
</van-popup>

<van-popup close-on-click-overlay round show="{{ endPoint.show }}" data-type="2" bind:close="onClose" position="bottom">
    <van-picker columns="{{ addressList }}" data-type="2" bind:cancel="onClose" bind:confirm="onChange"
        show-toolbar />
</van-popup>

