
<view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed none-bg text-white bg-img" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <view class="head-title canui-head-title"></view>
    </view>
</view>

<view class="box" style="top: 60px">
    <view class="cu-bar bg-white solid-bottom">
        <view class="action">
            <text class="cuIcon-title text-orange"></text>
            公告信息
        </view>
    </view>

    <view class="cu-card case no-card">
        <view class="cu-list menu-avatar">
            <!-- 循环渲染消息列表 -->
            <view class="cu-item" wx:for="{{ messageList }}" wx:key="id" bindtap="messageDetail" data-id="{{ item.id }}">
                <!-- 头像部分 -->
                <view class="cu-avatar radius lg" style="background-image:url({{ item.images ? item.images : '/static/default_avatar.png' }});"></view>

                <!-- 内容部分 -->
                <view class="content">
                    <view class="text-pink">
                        <text class="text-cut">{{ item.title }}</text>
                    </view>
                    <view class="text-gray text-sm flex" style="margin-top: 5px">
                        <text class="text-cut">{{ item.publisher }}</text>
                    </view>
<!--                    <view class="text-gray text-sm flex">-->
<!--                        <text class="text-cut">{{ item.content }}</text>-->
<!--                    </view>-->
                </view>

                <!-- 时间部分 -->
                <view class="action">
                    <view class="text-grey text-xs">{{ item.days }}</view>
                </view>
            </view>
        </view>
    </view>

    <!-- 空状态提示 -->
    <view>
        <van-empty wx:if="{{ messageList.length === 0 }}" description="暂无消息" style="height: 300px; width: 100%;" />
    </view>
</view>
